# RSS Feed Backend - Production Environment Variables
# Copy this file to .env.prod and fill in your actual values
# NEVER commit .env.prod to version control!

# ==================== Docker Configuration ====================
DOCKER_USERNAME=your_dockerhub_username
IMAGE_TAG=latest

# ==================== Application ====================
APP_ENV=production
APP_PORT=8000
LOG_LEVEL=info

# ==================== Database ====================
DATABASE_URL=postgresql+asyncpg://user:password@postgres:5432/rss_feed_db
POSTGRES_USER=rss_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=rss_feed_db

# ==================== Security ====================
JWT_SECRET_KEY=CHANGE_ME_VERY_LONG_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== CORS ====================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==================== Redis (Optional) ====================
REDIS_URL=redis://redis:6379/0

# ==================== Reading History Feature ====================
READING_HISTORY_ENABLED=true
READING_HISTORY_RETENTION_DAYS=365

# ==================== Monitoring (Optional) ====================
# SENTRY_DSN=https://xxx@sentry.io/xxx
# NEW_RELIC_LICENSE_KEY=xxx
# DATADOG_API_KEY=xxx

# ==================== External Services (Optional) ====================
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_FROM=noreply@yourdomain.com
# EMAIL_PASSWORD=xxx

# ==================== AWS (Optional for S3, etc.) ====================
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=rss-feed-uploads
