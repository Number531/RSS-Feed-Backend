# Application Settings
APP_NAME=RSS News Aggregator
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API Settings
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8081","http://localhost:19006"]

# Database Configuration
DATABASE_URL=postgresql+asyncpg://rss_user:rss_password@localhost:5432/rss_feed_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=900  # 15 minutes (900 seconds) - aligns with RSS feed refresh

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_BEAT_SCHEDULE_INTERVAL=900

# JWT Settings
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Supabase Configuration (Optional - for production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# RSS Feed Settings
RSS_FETCH_TIMEOUT=10
RSS_MAX_CONCURRENT_FETCHES=5
RSS_USER_AGENT=RSS-News-Aggregator/1.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_UNAUTHENTICATED=20

# Request Size Limiting (Optional - defaults to 10MB if not set)
# Uncomment to customize maximum request body size
# MAX_REQUEST_SIZE=10485760  # 10MB in bytes

# Email Settings (SMTP - Legacy)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=RSS News Aggregator
SMTP_USE_TLS=true

# Microsoft Graph API Settings (Preferred for Production)
# See .env.graph-api for complete setup with your Azure credentials
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=
MICROSOFT_SENDER_EMAIL=
MICROSOFT_SENDER_NAME=RSS News Aggregator
USE_GRAPH_API=false

# Email Verification
EMAIL_VERIFICATION_REQUIRED=false
FRONTEND_URL=http://localhost:3000
VERIFICATION_TOKEN_EXPIRE_HOURS=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Error Tracking (Sentry) - Optional
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Admin User (REQUIRED - for initial setup)
# Generate secure values for production!
ADMIN_EMAIL=admin@rssfeed.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123!-MUST-CHANGE-IN-PRODUCTION
