# Outlook/Microsoft 365 SMTP Configuration
SMTP_HOST=smtp-mail.outlook.com
SMTP_PORT=587
SMTP_USER=your-outlook-email@outlook.com
SMTP_PASSWORD=your-outlook-password
SMTP_FROM_EMAIL=your-outlook-email@outlook.com
SMTP_FROM_NAME=RSS News Aggregator
SMTP_USE_TLS=True

# Email Verification Settings
EMAIL_VERIFICATION_REQUIRED=False  # Set to True to enforce verification
FRONTEND_URL=http://localhost:3000
VERIFICATION_TOKEN_EXPIRE_HOURS=1

# Other required settings (if not already in .env)
DATABASE_URL=postgresql://user:pass@localhost/rss_db
REDIS_URL=redis://localhost:6379/0
SECRET_KEY=your-secret-key-here
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin-password
